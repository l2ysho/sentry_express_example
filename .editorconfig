# editorconfig.org
root = true

[*.yml]
indent_style = space
indent_size = 2

[*.conf]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# Indentation override for all apidoc files
[src/**.apidoc]
indent_style = space
indent_size = 4
